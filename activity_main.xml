<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@drawable/p6"

    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:text="  خروجی 1   "
            android:textOn="روشن"
            android:textOff="خاموش"
            app:showText="true"
            android:textSize="18dp"
            android:textStyle="bold"
            android:thumb="@drawable/switch_thumb"
            app:track="@drawable/switch_track"
            />
        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="top"
            android:src="@drawable/p2"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text="  خروجی 2   "
        android:textOn="روشن"
        android:textOff="خاموش"
        app:showText="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:thumb="@drawable/switch_thumb"
        app:track="@drawable/switch_track"
        />
    <ImageView
        android:layout_marginLeft="30dp"
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:src="@drawable/p2"
       />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:text="  خروجی 3   "
            android:textOn="روشن"
            android:textOff="خاموش"
            app:showText="true"
            android:textSize="18dp"
            android:textStyle="bold"
            android:thumb="@drawable/switch_thumb"
            app:track="@drawable/switch_track"
            />
        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="top"
            android:src="@drawable/p2"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:text="  خروجی 4   "
            android:textOn="روشن"
            android:textOff="خاموش"
            app:showText="true"
            android:textSize="18dp"
            android:textStyle="bold"
            android:thumb="@drawable/switch_thumb"
            app:track="@drawable/switch_track"
            />
        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="top"
            android:src="@drawable/p2"
            />
    </LinearLayout>
</LinearLayout>